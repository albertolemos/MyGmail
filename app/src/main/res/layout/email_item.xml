<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card_view_bg"
    tools:showIn="@layout/activity_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txt_icon"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:textSize="24sp"
            android:textColor="@android:color/white"
            android:background="@drawable/circle"
            android:gravity="center"
            android:text="F"/>

        <TextView
            android:id="@+id/txt_user"
            android:textColor="@color/darker_gray"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/txt_icon"
            android:layout_alignTop="@+id/txt_icon"
            android:layout_toStartOf="@+id/txt_date"
            android:text="Facebook"
            tools:ignore="UnknownId" />

        <TextView
            android:id="@+id/txt_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_user"
            android:layout_alignStart="@+id/txt_user"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/darker_gray"
            android:textSize="16sp"
            android:text=""/>

        <TextView
            android:id="@+id/txt_preview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_subject"
            android:layout_alignStart="@+id/txt_user"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="@color/darker_gray"
            android:textSize="16sp"
            android:layout_marginEnd="24dp"
            android:text=""/>

        <TextView
            android:id="@+id/txt_date"
            android:textColor="@color/darker_gray"
            android:singleLine="true"
            android:ellipsize="marquee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            tools:text="24 Sep"/>
        
        <ImageView
            android:id="@+id/img_star"
            android:src="@drawable/ic_baseline_star_border_24"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:contentDescription="TODO" />

    </RelativeLayout>
    
</androidx.cardview.widget.CardView>